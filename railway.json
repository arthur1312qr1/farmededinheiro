{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PAPER_TRADING": "true",
        "SYMBOL": "ETHUSDT",
        "POLL_INTERVAL": "3.0",
        "MIN_BALANCE_USDT": "20.0"
      }
    }
  }
}
